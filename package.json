{
  "name": "codecity-visualizer",
  "version": "0.2.11",
  "description": "Fully Configurable Code Visualisation Tool",
  "main": "bundle.js",
  "author": "Yvo Niedrich <yvo.niedrich@gmail.com>",
  "license": "MIT",
  "keywords": [
    "codecity",
    "visualisation"
  ],
  "repository": {
    "type": "git",
    "url": "http://git.ungolianth.de/ungolianth/codecity-visualizer.git"
  },
  "scripts": {
    "lint": "eslint src && eslint spec",
    "test": "jasmine",
    "compile": "rimraf lib && babel src --out-dir lib",
    "build": "npm run test --silent && npm run lint --silent && npm run compile --silent",
    "publish-patch": "npm run build --silent && npm version patch && npm publish"
  },
  "dependencies": {
    "core-js": "^2.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.6.0",
    "eslint": "^2.11.0",
    "eslint-plugin-jasmine": "^1.8.1",
    "jasmine": "^2.4.1",
    "rimraf": "latest"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "jasmine"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "script"
    },
    "env": {
      "node": true,
      "jasmine": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jasmine/recommended"
    ],
    "rules": {
      "no-eval": "error",
      "no-self-compare": "error",
      "complexity": "error",
      "yoda": [
        "error",
        "never",
        {
          "exceptRange": true
        }
      ]
    }
  }
}
