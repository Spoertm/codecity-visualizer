{
  "name": "codecity-visualizer",
  "version": "0.1.0",
  "description": "Fully Configurable Code Visualisation Tool",
  "main": "bundle.js",
  "author": "Yvo Niedrich <yvo.niedrich@gmail.com>",
  "license": "MIT",
  "keywords": [
    "codecity",
    "visualisation"
  ],
  "repository": {
    "type": "git",
    "url": "http://git.ungolianth.de/ungolianth/codecity-visualizer.git"
  },

  "scripts": {
    "clean": "rimraf lib",
    "lint": "eslint src",
    "build": "npm run lint --silent && npm run clean && babel src --out-dir lib",
    "publish-patch": "npm run build && npm version patch && npm publish",
    "test": "echo \" No Tests... \" && exit 1"
  },

  "dependencies": {
    "core-js": "^2.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.6.0",
    "eslint": "^2.11.0",
    "jasmine": "^2.4.1",
    "rimraf": "latest"
  },

  "babel": {
    "presets": [
      "es2015"
    ]
  },

  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "script"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "yoda": ["error", "never", { "exceptRange": true }],
      "no-eval": "error",
      "no-self-compare": "error"
    }
  }
}
