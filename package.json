{
    "name": "codecity-visualizer",
    "version": "0.3.0",
    "description": "Fully Configurable Code Visualisation Tool",
    "main": "lib/app.js",
    "author": "Yvo Niedrich <yvo.niedrich@gmail.com>",
    "license": "MIT",
    "keywords": [
        "codecity",
        "software",
        "interactive",
        "visualisation"
    ],
    "repository": {
        "type": "http",
        "url": "git+http://git.ungolianth.de/ungolianth/codecity-visualizer.git"
    },
    "scripts": {
        "lint": "npm run lint:sources -s && npm run lint:tests -s",
        "build": "npm run build:force -s",
        "test": "npm run test:force -s",
        "lint:sources": "eslint src && tslint \"src/**/*.ts?(x)\"",
        "lint:tests": "eslint spec && tslint \"spec/**/*.ts?(x)\"",
        "prebuild": "npm run lint:sources -s",
        "prebuild:force": "rimraf tmp lib",
        "build:force": "tsc -p src --outDir tmp && babel tmp --out-dir lib",
        "postbuild:force": "rimraf tmp",
        "pretest": "npm run lint:tests -s",
        "test:force": "jasmine",
        "prepublish": "npm run build -s && npm test -s"
    },
    "dependencies": {},
    "devDependencies": {
        "babel-cli": "^6.9.0",
        "babel-plugin-add-module-exports": "^0.2.1",
        "babel-preset-es2015": "^6.6.0",
        "eslint": "^2.11.0",
        "eslint-plugin-jasmine": "^1.8.1",
        "jasmine": "^2.4.1",
        "rimraf": "latest",
        "tslint": "^3.13.0",
        "typescript": "^2.0.0"
    },
    "babel": {
        "presets": [
            "es2015"
        ],
        "plugins": [
            "add-module-exports"
        ]
    },
    "eslintConfig": {
        "plugins": [
            "jasmine"
        ],
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "script"
        },
        "env": {
            "node": true,
            "jasmine": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:jasmine/recommended"
        ],
        "rules": {
            "no-eval": "error",
            "no-self-compare": "error",
            "complexity": "error",
            "yoda": [
                "error",
                "never",
                {
                    "exceptRange": true
                }
            ]
        }
    }
}
