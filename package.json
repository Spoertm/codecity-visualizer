{
  "name": "codecity-visualizer",
  "version": "0.2.11",
  "description": "Fully Configurable Code Visualisation Tool",
  "main": "bundle.js",
  "author": "Yvo Niedrich <yvo.niedrich@gmail.com>",
  "license": "MIT",
  "keywords": [
    "codecity",
    "visualisation"
  ],
  "repository": {
    "type": "git",
    "url": "http://git.ungolianth.de/ungolianth/codecity-visualizer.git"
  },
  "scripts": {
    "lint": "npm run lint:tests -s && npm run lint:source -s",
    "test": "npm run test:build -s",
    "build": "npm run build:prepare -s && npm run build:compile -s && npm run build:clean -s",
    "publish-patch": "npm run publish:build -s && npm run publish:patch -s",

    "lint:tests": "eslint spec",
    "lint:source": "eslint src",

    "test:build": "jasmine",

    "build:prepare": "rimraf lib",
    "build:compile": "tsc -p src && babel tmp --out-dir lib",
    "build:clean": "rimraf tmp",

    "publish:build": "npm run lint -s && npm test -s && npm build -s",
    "publish:patch": "npm version patch && npm publish"
  },
  "dependencies": {
    "core-js": "^2.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.6.0",
    "eslint": "^2.11.0",
    "eslint-plugin-jasmine": "^1.8.1",
    "jasmine": "^2.4.1",
    "rimraf": "latest",
    "typescript": "^1.8.10"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "jasmine"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "script"
    },
    "env": {
      "node": true,
      "jasmine": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jasmine/recommended"
    ],
    "rules": {
      "no-eval": "error",
      "no-self-compare": "error",
      "complexity": "error",
      "yoda": [
        "error",
        "never",
        {
          "exceptRange": true
        }
      ]
    }
  }
}
